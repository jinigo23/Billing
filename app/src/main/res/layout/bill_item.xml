<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_5"
    app:cardUseCompatPadding="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/invoice_item_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/product_padding_left"
            android:text="TextView"
            android:textColor="@color/app_default_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/invoice_item_name" />

        <TextView
            android:id="@+id/invoice_item_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/invoice_item_date"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/product_padding_left"
            android:paddingRight="8dp"
            android:text="TextView"
            android:textColor="@color/app_default_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintBaseline_toBaselineOf="@id/invoice_item_date"
            app:layout_constraintStart_toEndOf="@id/invoice_item_date" />

        <TextView
            android:id="@+id/invoice_item_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/product_padding_left"
            android:text="TextView"
            android:textColor="@color/app_default_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

